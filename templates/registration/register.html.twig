{% extends 'index.html.twig' %}

{% block title %} {{'registration.title'|trans }} {% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
	<link rel="stylesheet" href="{{ asset('css/registration.css') }}">
{% endblock %}

{% block javascripts %}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="{{ asset('js/registration.js') }}"></script>
{% endblock %}

{% block body %}
	<style>
		body {
			background-color: #f7f7f7;
		}
	</style>
	<form method="post">
		<div class="row justify-content-center">
			<div class="col-lg-6 mt-lg-4 col-md-12 login-box">
				<h3 class="text-center" style="color: #393939;">{{'registration.title'|trans }}</h3>

				{{ form_errors(registrationForm) }}

				{{ form_start(registrationForm) }}
				<div class="mb-3">
					<label> {{'registration.form.email'|trans }}</label>
					{{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(registrationForm.email) }}
				</div>
				<div class="mb-3">
					<label>{{ 'registration.form.plain_password'|trans }}</label>
					{{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(registrationForm.plainPassword) }}
				</div>
				<div class="mb-3">
					<label>{{ 'registration.form.agree_terms'|trans }}</label>
					{{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'form-check-input ms-1'} }) }}
					{{ form_errors(registrationForm.agreeTerms) }}
				</div>
				<div class="text-center">
					<button class="btn" type="submit" style="background-color: #7E60BF; color: white;">
						{{ 'registration.form.register'|trans }}
					</button>
                     <p class="mt-2">{{ 'registration.form.already_registered'|trans }} <a href="{{path('app_login')}}"> {{'registration.form.login'|trans }}</a></p>
				</div>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</form>
{% endblock %}
