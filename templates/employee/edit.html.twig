{% extends 'index.html.twig' %}

{% block title %}Dodaj / edytuj pracownika
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-12">
			<nav class="navbar navbar-light ">
				<div class="container-fluid">
					<div class="me-auto">
						<span>Edycja danych pracownika</span>
					</div>

					<span class="navbar-brand mb-0 h1">
						<img src="{{ asset('images/logo2.png')}}" width="175px" height="75px">
					</span>
					<div class="ms-auto">
						<span>
							<form method="post" action="{{ path('app_employee_delete', {'id': employee.id}) }}" onsubmit="return confirm('Czy na pewno chcesz usunąć tego pracownika?');">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ employee.id) }}">
								<button class="btn btn-danger">Usuń pracownika</button>
							</form>
						</span>
					</div>
				</div>
			</nav>
		</div>
	</div>
	{{ form_start(form) }}

	<div class="row">
		<div class="col-6">
			<div class="mb-3">
				<label>Imię</label>
				{{ form_widget(form.firstName, { 'attr': {'class': 'form-control'} }) }}
				{{ form_errors(form.firstName) }}
			</div>
			<div class="mb-3">
				<label>Nazwisko</label>
				{{ form_widget(form.lastName, { 'attr': {'class': 'form-control'} }) }}
				{{ form_errors(form.lastName) }}
			</div>
			<div class="mb-3">
				<label>Data urodzin</label>
				{{ form_widget(form.birthdayDate, { 'attr': {'class': 'form-control', 'type': 'date'} }) }}
				{{ form_errors(form.birthdayDate) }}
			</div>
			<div class="mb-3">
				<label>PESEL</label>
				{{ form_widget(form.pesel, { 'attr': {'class': 'form-control'} }) }}
				{{ form_errors(form.pesel) }}
			</div>
			<div class="mb-3">
				<label>Numer telefonu</label>
				{{ form_widget(form.phoneNumber, { 'attr': {'class': 'form-control'} }) }}
				{{ form_errors(form.phoneNumber) }}
			</div>
			<div class="mb-3">
				<label>Adres</label>
				{{ form_widget(form.address, { 'attr': {'class': 'form-control'} }) }}
				{{ form_errors(form.address) }}
			</div>
			<div class="mb-3">
				<label>Płeć</label>
				{{ form_widget(form.gender, { 'attr': {'class': 'form-control'} }) }}
				{{ form_errors(form.gender) }}
			</div>
		</div>
		<div class="col-6">
			<div class="mb-3">
				<label>Stanowisko</label>
				{{ form_widget(form.position, { 'attr': {'class': 'form-control'} }) }}
				{{ form_errors(form.position) }}
			</div>
			<div class="mb-3">
				<label>Dział</label>
				{{ form_widget(form.department, { 'attr': {'class': 'form-control'} }) }}
				{{ form_errors(form.department) }}
			</div>
			<div class="mb-3">
				<label>Wynagrodzenie zł brutto</label>
				{{ form_widget(form.salary, { 'attr': {'class': 'form-control'} }) }}
				{{ form_errors(form.salary) }}
			</div>
			<div class="mb-3">
				<label>Aktywny</label>
				{{ form_widget(form.status, { 'attr': {'class': 'form-control'} }) }}
				{{ form_errors(form.status) }}
			</div>
		</div>
	</div>

	<div class="text-center">
		<button type="submit" class="btn btn-primary">Zapisz dane pracownika</button>
	</div>
	{{ form_end(form) }}
{% endblock %}
