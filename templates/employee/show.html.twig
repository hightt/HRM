{% extends 'index.html.twig' %}

{% block title %}Dodaj / edytuj pracownika{% endblock %}

{% block content %}
    <h1>Employee</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ employee.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ employee.lastName }}</td>
            </tr>
            <tr>
                <th>Birthday_date</th>
                <td>{{ employee.birthdayDate ? employee.birthdayDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Pesel</th>
                <td>{{ employee.pesel }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_employee_index') }}">back to list</a>

    <a href="{{ path('app_employee_edit', {'id': employee.id}) }}">edit</a>

