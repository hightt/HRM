{% extends 'index.html.twig' %}

{% block title %}Lista wniosków urlopowych{% endblock %}

{% block content %}
	 <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
	 <script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>
		<div class="row"> <div class="col-12">
			<nav class="navbar navbar-light ">
				<div class="container-fluid">
					<div class="me-auto">
						<span></span>
					</div>

					<span class="navbar-brand mb-0 h1"></span>
					<div class="ms-auto">
						<a href="{{ path('app_leave_request_new')}} " type="button" class="btn purple-strong">Dodaj wniosek urlopowy</a>
					</div>
				</div>
			</nav>
		</div>
	</div>

	<table id="main-table" class="table text-left">
		<thead>
			<tr>
				<th>ID wniosku</th>
				<th>Pracownik</th>
				<th>Manager rozpatrujący wniosek</th>
				<th>Rodzaj wniosku</th>
				<th>Od</th>
				<th>Do</th>
				<th>Status</th>
				<th></th>
			</tr>
		</thead>
	</table>

	 <script>
	    $(document).ready(function () {
	        var table = $('#main-table').DataTable({
	            processing: true,
	            serverSide: true,
	            ajax: '{{ path("app_leave_request_list") }}',
	            columns: [
	                { data: 'id' },
	                { data: 'employeeName' },
	                { data: 'reviewedByManagerName' },
	                { data: 'leaveType' },
	                { data: 'dateFrom' },
	                { data: 'dateTo' },
	                { data: 'status' },
	                {
	                    data: 'editUrl',
	                    render: function (data, type, row) {
	                        return '<a href="' + data + '" class="btn purple-strong">Edytuj</a>';
	                    }
	                },
	            ],
	            lengthChange: false,
	            info: false,
	            language: {
	                paginate: { next: 'Następna', previous: 'Poprzednia' },
	                search: '',
	                lengthMenu: 'Pokaż _MENU_ wpisów na stronę',
	                info: 'Pokazuje _START_ do _END_ z _TOTAL_ wpisów',
	                infoEmpty: 'Brak wpisów do wyświetlenia',
	                infoFiltered: '(filtrowanie z _MAX_ wpisów)',
	                zeroRecords: 'Brak wyników'
	            },
	            initComplete: function() {
	                $('.dataTables_filter input').attr('placeholder', 'Wyszukaj...');
	            }
	        });
	
	        $('#main-table tbody').on('click', 'tr', function () {
	            var rowData = table.row(this).data(); 
	            if (rowData && rowData.showUrl) {
	                window.location.href = rowData.showUrl; 
	            }
	        });
	    });
	</script>
{% endblock %}
