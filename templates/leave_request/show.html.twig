{% extends 'index.html.twig' %}

{% block title %} {{ 'leave_request.actions.details'|trans }} {% endblock %}

{% block content %}
	<style>
		body {
			background-color: #f6f6f6;
		}
	</style>

	<div class="container">
		<div class="row mt-5">
			<div class="col-4">
				<div class="p-3" style="background-color: #fff; border-top-right-radius: 8px; border-top-left-radius: 8px;">
					<div class="text-center">
						<i class="fa-solid fa-file-signature" style="font-size: 150px; color: #34495e;"></i>
					</div>
					<div class="mt-2 text-center" style="font-weight: bold;"></div>
				</div>

				<div class="p-3" style="background-color: #fff;">
					<div style="font-weight: bold;">
						{{ 'leave_request.form.input_date'|trans }}
					</div>
					<div class="mt-2">
						{{leaveRequest.createdAt|date("d.m.Y H:i")}}
					</div>
				</div>

				<div class="p-3" style="background-color: #fff;">
					<div style="font-weight: bold;">
						{{ 'leave_request.form.applicant'|trans }}
					</div>
					<div class="mt-2">
						{{leaveRequest.employee.fullName}}
					</div>
				</div>

				<div class="p-3" style="background-color: #fff; border-bottom-right-radius: 8px; border-bottom-left-radius: 8px;">
					<div style="font-weight: bold;">
						{{ 'leave_request.form.manager'|trans }}
					</div>
					<div class="mt-2">
						{{leaveRequest.employee.getDepartment.manager.fullName}}
					</div>
				</div>
			</div>
			<div class="col-8">
				<div class="row mb-3 p-3 ps-0" style="background-color: #fff; border-radius: 8px;">
					<div class="d-flex gap-3">
						
						<div>
							<a href="{{ path('app_leave_request_edit', {'id': leaveRequest.id}) }}">
								<div class="tool">
									<div class="text-center">
										<i class="fa-solid fa-circle-user"></i>
									</div>
									<div class="text-center">{{ 'leave_request.actions.edit'|trans }}</div>
								</div>
							</a>
						</div>

						<div>
							<a href="{{ path('app_leave_request_decide', {'id': leaveRequest.id}) }}">
								<div class="tool">
									<div class="text-center">
										<i class="fa-solid fa-circle-check text-success"></i>
										<i class="fa-solid fa-circle-xmark text-danger"></i>
									</div>
									<div class="text-center">{{ 'leave_request.actions.accept_or_decline'|trans }}</div>
								</div>
							</a>
						</div>

					</div>
				</div>

				<div class="row mt-3 p-3" style="background-color: #fff; border-radius: 8px;">
					<div class="mb-3">
						<span style="font-weight: bold;">{{ 'leave_request.table.type'|trans }}</span>
						<div class="mt-1">{{leaveRequest.leaveType.getTranslationKey|trans}}</div>
					</div>
					<div class="mb-3">
						<span style="font-weight: bold;">{{ 'leave_request.form.start_date'|trans }}</span>
						<div class="mt-1">{{leaveRequest.dateFrom|date("d.m.Y")}}</div>
					</div>
					<div class="mb-3">
						<span style="font-weight: bold;">{{ 'leave_request.form.end_date'|trans }}</span>
						<div class="mt-1">{{leaveRequest.dateTo|date("d.m.Y") }}</div>
					</div>
					<div class="mb-3">
						<span style="font-weight: bold;"> {{ 'leave_request.form.status'|trans }}</span>
						<div class="mt-1">{{leaveRequest.status.getTranslationKey|trans}}</div>
					</div>
					<div class="mb-3">
						<span style="font-weight: bold;"> {{ 'leave_request.form.applicant_comments'|trans }}</span>
						<div class="mt-1">
							{% if leaveRequest.comment is empty %}
								---
							{% else %}
								{{leaveRequest.comment}}
							{% endif %}
						</div>
					</div>
					<div class="mb-3">
						<span style="font-weight: bold;"> {{ 'leave_request.form.manager_comments'|trans }}</span>
						<div class="mt-1">
							{% if leaveRequest.comment is empty %}
								---
							{% else %}
								{{leaveRequest.managerComment}}
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
