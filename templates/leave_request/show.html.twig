            <tr>
                <th>DateTo</th>
                <td>{{ leave_request.dateTo ? leave_request.dateTo|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ leave_request.status }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ leave_request.comment }}</td>
            </tr>
            <tr>
                <th>ManagerComment</th>
                <td>{{ leave_request.managerComment }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
