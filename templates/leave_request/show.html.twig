{% extends 'index.html.twig' %}

{% block title %}Szczegóły pracownika
{% endblock %}

{% block content %}
	<style>
		body {
			background-color: #f6f6f6;
		}
	</style>

	<div class="container">
		<div class="row mt-5">
			<div class="col-4">
				<div class="p-3" style="background-color: #fff; border-top-right-radius: 8px; border-top-left-radius: 8px;">
					<div class="text-center">
						<i class="fa-solid fa-file-signature" style="font-size: 150px; color: #34495e;"></i>
					</div>
					<div class="mt-2 text-center" style="font-weight: bold;"></div>
				</div>

				<div class="p-3" style="background-color: #fff;">
					<div style="font-weight: bold;">
						Data wpływu wniosku
					</div>
					<div class="mt-2">
						{{leaveRequest.createdAt|date("d.m.Y H:i")}}
					</div>
				</div>

				<div class="p-3" style="background-color: #fff;">
					<div style="font-weight: bold;">
						Wnioskujący
					</div>
					<div class="mt-2">
						{{leaveRequest.employee.fullName}}
					</div>
				</div>

				<div class="p-3" style="background-color: #fff; border-bottom-right-radius: 8px; border-bottom-left-radius: 8px;">
					<div style="font-weight: bold;">
						Manager rozpatrujący
					</div>
					<div class="mt-2">
						{{leaveRequest.employee.getDepartment.manager.fullName}}
					</div>
				</div>
			</div>
			<div class="col-8">
				<div class="p-3" style="background-color: #fff; border-radius: 8px;">

					<div class="row mb-3">
						<div class="me-auto">
							<a href="{{ path('app_leave_request_edit', {'id': leaveRequest.id}) }}">
								<div class="tool">
									<div class="text-center">
										<i class="fa-solid fa-circle-user"></i>
									</div>
									<div class="text-center">Edytuj wniosek</div>
								</div>
							</a>
						</a>
					</div>
				</div>
				<div>
					<div class="mb-3">
						<span style="font-weight: bold;">Rodzaj wniosku</span>
						<div class="mt-1">{{leaveRequest.leaveType.getTranslationKey|trans}}</div>
					</div>
					<div class="mb-3">
						<span style="font-weight: bold;">Data zakończenia</span>
						<div class="mt-1">{{leaveRequest.dateTo|date("d.m.Y")}}</div>
					</div>
					<div class="mb-3">
						<span style="font-weight: bold;">Data zakończenia</span>
						<div class="mt-1">{{leaveRequest.status.getTranslationKey|trans}}</div>
					</div>
					<div class="mb-3">
						<span style="font-weight: bold;">Komentarz wnioskującego</span>
						<div class="mt-1">{{leaveRequest.comment}}</div>
					</div>
					<div class="mb-3">
						<span style="font-weight: bold;">Komentarz managera rozpatrującego</span>
						<div class="mt-1">{{leaveRequest.managerComment}}</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
