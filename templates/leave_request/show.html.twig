<title>LeaveRequest</title>

{% block body %}
    <h1>LeaveRequest</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ leave_request.id }}</td>
            </tr>
            <tr>
                <th>LeaveType</th>
                <td>{{ leave_request.leaveType }}</td>
            </tr>
            <tr>
                <th>DateFrom</th>
                <td>{{ leave_request.dateFrom ? leave_request.dateFrom|date('Y-m-d') : '' }}</td>
