		{% for label, messages in app.flashes %}
			<div class="alert alert-{{ label }} message-box">
				{% for message in messages %}
					<p>{{ message }}</p>
				{% endfor %}
			</div>
		{% endfor %}
		{% block body %}{% endblock %}
	</body>
</html>
