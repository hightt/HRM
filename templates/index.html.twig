{% extends 'root.html.twig' %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-2 p-0 m-0">
				<div class="sidebar d-flex flex-column flex-shrink-0 p-3 ps-0" style="min-height: 100vh; background-color: #f9f9f9;">
					<div class="text-center">
						<img src="{{ asset('images/logo2.png')}}" width="175px" height="75px">
					</div>
					<hr>
					<ul class="nav nav-pills flex-column mb-auto">
						<li class="nav-item">
							<a href="{{ path('app_homecontroller') }}" class="nav-link d-flex align-items-center {% if app.request.attributes.get('_route') == 'app_homecontroller' %}main-menu-link-active{% else %}link-dark{% endif %}">
								<i class="fa-solid fa-chart-line me-2 flex-shrink-0" style="width: 20px; text-align: center;"></i>
								<span>Dashboard</span>
							</a>
						</li>
						<li class="nav-item">
							<a href="{{ path('app_employee_show', { id: app.user.employee.id }) }}" class="nav-link d-flex align-items-center {% if app.request.attributes.get('_route') == 'app_employee_show' %}main-menu-link-active{% else %}link-dark{% endif %}">
								<i class="fa-solid fa-user me-2 flex-shrink-0" style="width: 20px; text-align: center;"></i>
								<span>Twoje konto</span>
							</a>
						</li>
						<li class="nav-item">
							<a href="{{ path('app_department_show', { id: app.user.employee.department.id }) }}" class="nav-link d-flex align-items-center {% if app.request.attributes.get('_route') == 'app_department_show' %}main-menu-link-active{% else %}link-dark{% endif %}">
								<i class="fa-solid fa-building-user me-2 flex-shrink-0" style="width: 20px; text-align: center;"></i>
								<span>Twój dział</span>
							</a>
						</li>
						<!--- TODO -->
						<li class="nav-item">
							<a href="{{ path('app_department_show', { id: app.user.employee.department.id }) }}" class="nav-link d-flex align-items-center {% if app.request.attributes.get('_route') == 'app_department_show' %}main-menu-link-active{% else %}link-dark{% endif %}">
								<i class="fa-solid fa-building-user me-2 flex-shrink-0" style="width: 20px; text-align: center;"></i>
								<span>Wnioski urlopowe</span>
							</a>
						</li>
						{% if is_granted('ROLE_ACCOUNTING') %}
						<li>
							<a href="{{ path('app_employee_index') }}" class="nav-link d-flex align-items-center {% if app.request.attributes.get('_route') == 'app_employee_index' %}main-menu-link-active{% else %}link-dark{% endif %}">
								<i class="fa-solid fa-users me-2 flex-shrink-0" style="width: 20px; text-align: center;"></i>
								<span>Lista pracowników</span>
							</a>
						</li>
						<li>
							<a href="{{ path('app_department_index') }}" class="nav-link d-flex align-items-center {% if app.request.attributes.get('_route') == 'app_department_index' %}main-menu-link-active{% else %}link-dark{% endif %}">
								<i class="fa-solid fa-building me-2 flex-shrink-0" style="width: 20px; text-align: center;"></i>
								<span>Działy</span>
							</a>
						</li>
						<li>
							<a href="#" class="nav-link link-dark d-flex align-items-center">
								<i class="fa-solid fa-house me-2 flex-shrink-0" style="width: 20px; text-align: center;"></i>
								<span>Dane na temat twojej firmy</span>
							</a>
						</li>
						<li>
							<a href="#" class="nav-link link-dark d-flex align-items-center">
								<i class="fa-solid fa-gear me-2 flex-shrink-0" style="width: 20px; text-align: center;"></i>
								<span>Ustawienia</span>
							</a>
						</li>
						{% endif %}
						<li>
							<form action="{{ path('app_logout') }}" method="post">
								<button type="submit" class="nav-link d-flex align-items-center link-dark" style="background: none; border: none; width: 100%; text-align: left;">
									<i class="fa-solid fa-right-from-bracket me-2 flex-shrink-0" style="width: 20px; text-align: center;"></i>
									<span>Wyloguj</span>
								</button>
							</form>
						</li>
					</ul>
				</div>
			</div>
			<div class="col-10 p-0 m-0">
				{% block content %}{% endblock %}
			</div>
		</div>
	</div>
{% endblock %}
